
# Server configuration
# The port the server will listen on (optional, default in code: 5001)
PORT=5001

# Node environment
NODE_ENV=development

# Debugging helpers
# Set to 1 to enable verbose score-stats debug logs in the server
DEBUG_SCORE_STATS=0

# Supabase credentials (required to allow the server to read/update bet rows)
# SUPABASE_URL should be your project's URL, e.g. https://xyzcompany.supabase.co
SUPABASE_URL=https://your-project.supabase.co

# Prefer the service role key for server-side operations (has elevated privileges).
# If you want to restrict, you may also set SUPABASE_ANON_KEY instead (not recommended for server).
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here


# Redis connection URL (required to enable caching and rate-limiting)
REDIS_URL=redis://default:yourpassword@your-redis-host:port

# If set to 1 (or 'true'), the scorcerer validator will store the full JSON snapshot
# in Redis under the key `scorcerer:snapshot:<gameId>` instead of a SHA-256 hash.
# This is useful for local auditing/debugging but may increase Redis storage usage.
SCORCERER_STORE_RAW=0
