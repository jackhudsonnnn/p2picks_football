{
  "name": "p2picks-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p .",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "ci": "npm run lint && npm run typecheck && npm run test:coverage"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "bullmq": "^5.66.4",
    "chokidar": "^3.6.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.19.2",
    "ioredis": "^5.4.1",
    "lru-cache": "^11.2.6",
    "pino": "^10.3.1",
    "redis": "^5.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.10",
    "@types/pino": "^7.0.4",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^9.39.2",
    "supertest": "^7.2.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.55.0",
    "vitest": "^1.6.0"
  }
}
